<%# ヘッダー %>
<%= render "shared/header" %>
<%# ヘッダー %>

  <div class="sub-title">
    おくったもの・いただいたものをしっかり管理<br>
    おすすめギフト情報をみんなで共有
  </div>

<%= form_with model: @user, url: user_session_path, class: "login-main", local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <div class="form-header-text">
      ログイン
    </div>
  </div>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"", autofocus: true %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class="login-box">
    <%= f.submit "ログイン" ,class:"login-btn" %>
  </div>
  <div class="registration-box">
    ユーザー登録は
  <div class="user-nav"><%= link_to "こちら", new_user_registration_path, class: "post" %></div>
    から
  </div>
</div>
<% end %>

<%# フッター %>
<%= render "shared/footer" %>
<%# フッター %>